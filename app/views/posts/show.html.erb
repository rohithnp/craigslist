<% title "Post" %>

<p>
  <strong>Brand:</strong>
  <%= @post.brand_id %>
</p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Price:</strong>
  <%= @post.price %>
</p>
<p>
  <strong>Value:</strong>
  <%= @post.value %>
</p>
<p>
  <strong>Url:</strong>
  <%= @post.url %>
</p>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
